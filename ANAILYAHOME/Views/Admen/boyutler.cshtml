@using ANAILYAHOME.entityes
@model List<Buyutlar>
@{
    ViewData["Title"] = "boyutler";
    Layout = "~/Views/Shared/_LayoutAdmen.cshtml";
}



<h2 style="font-weight:700 ;position:absolute; top:70px;"> Boyutler</h2>
<br />

<table class="table table-bordered" style="margin-top:-15px">


    <tr>
        <th>Id</th>
        <th>Urun Adi</th>
        <th>Cüncele</th>
        <th>sil</th>

    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.urun.katagore</td>
            <td><a href="/Admen/boyutgetir/@x.id" class="btn btn-primary">Cüncele</a></td>
            <td><a href="/Admen/boyutsil/@x.id" class="btn btn-danger">sil</a></td>

        </tr>
    }
</table>
<a href="/Admen/yeniBoyut/" class="btn btn-primary">Boyut ek</a>

