@model ANAILYAHOME.saticiol.saticiol
@{
    ViewData["Title"] = "sendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/style.css" />

@using (Html.BeginForm("sendEmail", "saticiol", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   @*  @Html.AntiForgeryToken() *@
    <div class="form-horizontal container" style="margin-top:100px; ">
        <h1>Send Email</h1>
        <hr/>
        <form asp-action="sendEmail" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group txtb">
                <label asp-for="Kimlik" class="control-label"></label>
                <input asp-for="Kimlik" class="form-control" />
                <span asp-validation-for="Kimlik" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="Soyadı" class="control-label"></label>
                <input asp-for="Soyadı" class="form-control" />
                <span asp-validation-for="Soyadı" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="saticiadres" class="control-label">Adres</label>
                <input asp-for="saticiadres" class="form-control" />
                <span asp-validation-for="saticiadres" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="ŞirketAdi" class="control-label"></label>
                <input asp-for="ŞirketAdi" class="form-control" />
                <span asp-validation-for="ŞirketAdi" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="ŞirketAdres" class="control-label"></label>
                <input asp-for="ŞirketAdres" class="form-control" />
                <span asp-validation-for="ŞirketAdres" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="sirketTanim" class="control-label"></label>
                <input asp-for="sirketTanim" class="form-control" />
                <span asp-validation-for="sirketTanim" class="text-danger"></span>
            </div>
            <div class="form-group txtb">
                <label asp-for="katagore" class="control-label"></label>
                <input asp-for="katagore" class="form-control" />
                <span asp-validation-for="katagore" class="text-danger"></span>
            </div>

            <br><br>
            <div class=" col-12 btn-group p-0 m-0">
                <div class="col-6 form-group text-left p-0">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*//لا يتم تحميل الصفحه اذا ما تعبت الانبةتات*@
    <partial name="_ValidationScriptsPartial" />
}