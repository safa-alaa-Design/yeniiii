
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmen.cshtml";
}

﻿@using Microsoft.AspNetCore.Identity;
@model IEnumerable<AplicationUser>


<div class="container pt-2" style="font-weight:700;margin-top:-70px;">


    <div class="row pt-3">
        <div class="col-6">
            <h2  class="text-primary">System Users</h2>
            
              
          
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    User Id
                </th>
                <th scope="col">
                    User Name
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @item.Id
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        <a asp-controller="Roles" asp-action="addRoles" asp-route-userId="@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil-fill "></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
